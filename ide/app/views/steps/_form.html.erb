<%= form_with(model: step, local: true) do |form| %>
  <% if step.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(step.errors.count, "error") %> prohibited this step from being saved:</h2>

      <ul>
        <% step.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :tutorial %>
    <ul>
      <% @tuts.each do |t| %>
        <li>
          <%= radio_button_tag(:step_tutorial_id, t.id) %>
          <%= label_tag(:tutorial, t.name) %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :step_title %>
  </div>

  <div class="field">
    <%= form.label :instruction %>
    <%= form.text_field :instruction, id: :step_instruction %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_field :image, id: :step_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
